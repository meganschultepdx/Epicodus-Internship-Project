{
	"exclude": [
		"wwwroot",
		"node_modules",
		"bin",
		"__tests__"
	],
	"compilerOptions": {
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": false,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": false,
		"lib": [ "es5", "es6", "dom", "es2017.object" ],
		"outDir": "./wwwroot/dist/",
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"moduleResolution": "node",
		"sourceMap": true,
		"allowJs": false,
		"types": [ "webpack-env", "jest", "sinon" ]
	}
}